<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Runtime optimizations for WPF startup performance -->
  <runtime>
    <!-- Disable publisher evidence generation for faster assembly loading -->
    <generatePublisherEvidence enabled="false"/>
    
    <!-- Assembly binding optimizations -->
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <!-- Optimize probing for faster assembly resolution -->
      <probing privatePath="bin;bin\plugins;lib"/>
    </assemblyBinding>
    
    <!-- Enhanced GC optimizations for startup performance -->
    <gcServer enabled="false"/>
    <gcConcurrent enabled="true"/>
    <!-- Optimize GC for workstation scenarios -->
    <gcAllowVeryLargeObjects enabled="true"/>
    
    <!-- Thread pool optimizations -->
    <ThreadPool_EnableWorkerTracking enabled="false"/>
    
    <!-- .NET 8 Performance optimizations -->
    <EnableEventPipe>false</EnableEventPipe>
    <EventPipeOutputPath></EventPipeOutputPath>
    
    <!-- Loader optimizations for WPF -->
    <loadFromRemoteSources enabled="false"/>
    <legacyCorruptedStateExceptionsPolicy enabled="false"/>
    
    <!-- Assembly loading optimizations -->
    <disableFusionUpdatesFromADManager enabled="true"/>
    <bypassTrustedAppStrongNames enabled="true"/>
  </runtime>
  
  <!-- Enhanced Network optimizations (reduce startup delays from network operations) -->
  <system.net>
    <settings>
      <!-- Reduce connection management overhead -->
      <servicePointManager 
        useNagleAlgorithm="false" 
        expect100Continue="false" 
        checkCertificateName="false" 
        checkCertificateRevocationList="false"
        connectionLimit="12"
        maxServicePointIdleTime="900000"/>
      <!-- Optimize IPv6 for faster DNS resolution -->
      <ipv6 enabled="true"/>
      <!-- Disable automatic proxy detection -->
      <httpWebRequest useUnsafeHeaderParsing="false"/>
    </settings>
    <defaultProxy enabled="false" useDefaultCredentials="false"/>
    <!-- Connection management optimizations -->
    <connectionManagement>
      <add address="*" maxconnection="12"/>
    </connectionManagement>
  </system.net>
  
  <!-- Enhanced AppContext switches for performance (WPF + Syncfusion optimizations) -->
  <runtime>
    <AppContextSwitchOverrides value="Switch.System.Windows.Input.Stylus.EnablePointerSupport=false;Switch.System.Windows.DoNotScaleForDpiChanges=false;Switch.System.Windows.Controls.Grid.StarDefinitionsCanExceedAvailableSpace=false;Switch.System.Windows.Controls.TabControl.SelectionPropertiesCanLagBehindSelectionChangedEvent=false;Switch.System.Xml.AllowDefaultResolver=false;Switch.System.Net.DontEnableSchUseStrongCrypto=false"/>
  </runtime>
  
  <!-- WPF Font optimization for Syncfusion controls -->
  <appSettings>
    <!-- Enable font cache optimization -->
    <add key="EnableFontCaching" value="true"/>
    <!-- Optimize Syncfusion control rendering -->
    <add key="SyncfusionEnableOptimization" value="true"/>
    <!-- Disable unnecessary WPF features for performance -->
    <add key="DisableProcessorFeatures" value="false"/>
  </appSettings>
  
  <!-- Enhanced startup mode optimizations -->
  <startup>
    <!-- Use latest supported runtime for best performance -->
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
    <!-- Enable concurrent GC from startup -->
    <gcConcurrent enabled="true"/>
    <!-- Optimize for desktop workstation -->
    <gcServer enabled="false"/>
  </startup>
  
  <!-- 
  PERFORMANCE OPTIMIZATION NOTES for Wiley Widget + Syncfusion:
  
  Based on Microsoft WPF Performance Documentation:
  1. generatePublisherEvidence=false: Bypasses Authenticode verification (major startup boost)
  2. gcConcurrent=true: Enables concurrent garbage collection for better UI responsiveness  
  3. Network settings optimized: Reduces DNS/proxy delays during startup
  4. AppContext switches: Disables unnecessary WPF features that can slow rendering
  5. Font caching enabled: Critical for Syncfusion controls with custom fonts/styling
  6. Assembly loading optimized: Faster resolution of dependencies
  
  Syncfusion-Specific Optimizations:
  - Controls benefit from font caching being enabled
  - Grid/TabControl switches improve control performance
  - Concurrent GC helps with control rendering operations
  - Connection limits optimized for Azure/web service calls
  
  Startup Performance Targets:
  - Cold startup: < 2000ms (Good) < 1000ms (Excellent)  
  - Warm startup: < 500ms (Target)
  - First paint: < 300ms (Critical for user experience)
  -->
</configuration>